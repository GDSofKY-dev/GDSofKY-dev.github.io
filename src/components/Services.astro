---
import { Image } from "astro:assets";
import service_image from "../assets/images/spring.png"
---

<section id="services" class="services-section">
    <div class="container">
        <div class="title">
            Our services
        </div>
        <div class="services-container">
            <div class="service-col">
                <h3> Service Name</h3>
                <p>
                    Service Description
                </p>
                <div class="service-image">
                    <Image
                    src={service_image}
                    alt="Image of service"
                    >
                </div>
            </div>
            <div class="service-col">
                <h3> Service Name</h3>
                <p>
                    Service Description
                </p>
                <div class="service-image">
                    <Image
                    src={service_image}
                    alt="Image of service"
                    >
                </div>
            </div>
            <div class="service-col">
                <h3> Service Name</h3>
                <p>
                    Service Description
                </p>
                <div class="service-image">
                    <Image
                    src={service_image}
                    alt="Image of service"
                    >
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .services-section {
        background-color: var(--background-50);
    }

    .title {
        font-size: 3.5rem;
        font-weight: 600;
        color: var(--text-800);
        margin-bottom: 3rem;
        text-align: left;
        line-height: 1.1;
    }

    .services-container{
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2.5rem;
        align-items: start;
    }

    .service-col {
        display: flex;
        flex-direction: column;
        text-align: left;
        background-color: white;
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        transition: all 0.5 ease;
    }

    .service-col:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    .service-col h3 {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-800);
        margin: 1.5rem 1.5rem 1rem 1.5rem;
        line-height: 1.3;
    }

    .service-col p {
        font-size: 1rem;
        columns: var(--text-600);
        margin: 1.5rem 1.5rem 1rem 1.5rem;
        line-height: 1.3;
    }

    .service-image {
        width: 100%;
        height: 250px;
        overflow: hidden;
    }

    .service-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.3s ease;
    }

    .service-col:hover .service-image img {
        transform: scale(1.05);
    }

    @media (max-width: 768px) {
        .services-container {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .title {
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 2rem;
        }

        .service-col {
            text-align: center;
        }

        .service-col h3 {
            text-align: center;
        }

        .service-col p {
            text-align: center;
        }
    }

    @media (max-width: 1024px) and (min-width: 769px) {
        .services-container {
            gap: 2rem;
        }
        .title {
            font-size: 3rem;
        }

    }

</style>
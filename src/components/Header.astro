---
import { Image } from 'astro:assets';
import logo from "../assets/GDS_logo.svg"
---

<header id="header">
    <div class="container">
        <div class="logo" style="display:grid; justify-content: center;">
            <a href="#"
            data-aos="fade-up" data-aos-delay="500" data-aos-duration="1000"
            data-aos-offset="-1000">
                <Image
                    src={logo}
                    alt="Garage Door Solutions of KY logo"
                    width="200"
                />
            </a>
        </div>
        <nav style="display:grid; justify-content: center; overflow: hidden;">
            <ul>
                <li><a href="#home">Home</a></li>
                <li><a href="#services">Services</a></li>
                <li><a href="#why-choose">About</a></li>
                <li><a href="#testimonials">Testimonials</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
    header {
    background-color: transparent;
    justify-content: space-between;
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    z-index: 100;
    padding: 2rem 0;
    }

    .container {
    display: flex;
    justify-content: space-between;
    }

    .logo a{
        text-decoration: none;
        width: auto;
        height: auto;
    }

    nav ul {
        font-size: 1.5em;
        display: flex;
        list-style: none;
        margin: 0;
        display: none;

    }

    nav ul li {
        margin: 2rem;
    }

    nav ul li a {
        color: white;
    }

    nav ul li a:hover {
        color: rgb(var(--accent));
    }

    @media (max-width: 768px) {
        .container {
            flex-direction: column;
            gap: 1rem;
        }

        nav ul {
            font-size: 1em;
            gap: 1rem;
            /* TODO: Remove this?? */
            display: none;
        }

        nav ul li {
            margin-left: 0;
        }
    }
</style>
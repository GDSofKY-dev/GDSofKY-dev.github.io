---
import { COMPANY_INFO } from "../constants/company";
---

<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-left">
                <div class="company-info">
                    <h4>{COMPANY_INFO.name}</h4>
                    <p>Professional garage door services in Richmond, Kentucky and surrounding areas.</p>
                </div>
            </div>
            <div class="footer-right">
                <div class="footer-contact">
                    <a href={COMPANY_INFO.phoneHref} class="phone-link">
                        <i class="bi bi-telephone"></i>
                        {COMPANY_INFO.phone}
                    </a>
                    <div class="social-links">
                        <a target="_blank" href={COMPANY_INFO.social.facebook} aria-label="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a target="_blank" href={COMPANY_INFO.social.google} aria-label="Google Reviews">
                            <i class="bi bi-google"></i>
                        </a>
                        <a target="_blank" href={COMPANY_INFO.social.nextdoor} aria-label="Nextdoor">
                            <i class="bi bi-house-fill"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="copyright">
                <p>&copy; {new Date().getFullYear()} {COMPANY_INFO.name}. All rights reserved.</p>
            </div>
            <span class="footer-links">
                Designed and developed by<a target="_blank" href="https://www.sandesh-l.com">Sandesh Lamichhane</a>
            </span>
        </div>
    </div>
</footer>

<style>
    .footer {
        background-color: var(--secondary-800);
        color: var(--text-100);
        padding: 3rem 0 1.5rem 0;
        border-top: 1px solid var(--secondary-600);
    }

    .footer-content {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 3rem;
        align-items: start;
        margin-bottom: 2rem;
    }

    .footer-left h4 {
        color: var(--text-50);
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0 0 1rem 0;
    }

    .footer-left p {
        color: var(--text-300);
        line-height: 1.6;
        margin: 0;
        max-width: 400px;
    }

    .footer-right {
        display: flex;
        justify-content: flex-end;
    }

    .footer-contact {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 1.5rem;
    }

    .phone-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--primary-400);
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .phone-link:hover {
        color: var(--primary-300);
    }

    .phone-link i {
        font-size: 1.1rem;
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-links a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: var(--secondary-700);
        color: var(--text-200);
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 1.2rem;
    }

    .social-links a:hover {
        background: var(--primary-600);
        color: white;
        transform: translateY(-2px);
    }

    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 2rem;
        border-top: 1px solid var(--secondary-600);
    }

    .copyright p {
        margin: 0;
        color: var(--text-400);
        font-size: 0.9rem;
    }

    .footer-links {
        color: var(--text-300);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-300);
    }

    .footer-links a {
        color: var(--text-300);
        text-decoration: underline;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .footer-links a:hover {
        text-decoration: underline;
        color: var(--primary-400);
    }

    .separator {
        color: var(--text-500);
        font-size: 0.8rem;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .footer {
            padding: 2rem 0 1rem 0;
        }

        .footer-content {
            grid-template-columns: 1fr;
            gap: 2rem;
            text-align: center;
        }

        .footer-right {
            justify-content: center;
        }

        .footer-contact {
            align-items: center;
        }

        .footer-bottom {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }

        .footer-links {
            justify-content: center;
        }
    }

    @media (max-width: 480px) {
        .footer-left h4 {
            font-size: 1.25rem;
        }

        .phone-link {
            font-size: 1.1rem;
        }

        .social-links a {
            width: 36px;
            height: 36px;
            font-size: 1.1rem;
        }
    }
</style>
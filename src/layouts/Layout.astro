---
// Remove the AOS CSS import - we'll use CDN for both CSS and JS
export interface Props {
    title: string;
}
const { title } = Astro.props;
import 'aos/dist/aos.css'
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Load AOS CSS from CDN -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" integrity="sha512-1cK78a1o+ht2JcaW6g8OXYwqpev9+6GqOkz9xmBN9iUUhIndKtxwILGWYOSibOKjLsEdjyjZvYDq/cZwNeak0w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>
<body>
    <slot />

    <!-- Load AOS JavaScript -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      import AOS from "aos";
      AOS.init();
    </script>

    <style is:global>
        @import url('https://fonts.cdnfonts.com/css/open-sauce-one');
        @import url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css");

        :root {
            --text-50: #f2f2f2;
            --text-100: #e6e6e6;
            --text-200: #cccccc;
            --text-300: #b3b3b3;
            --text-400: #999999;
            --text-500: #808080;
            --text-600: #666666;
            --text-700: #4d4d4d;
            --text-800: #333333;
            --text-900: #1a1a1a;
            --text-950: #0d0d0d;
            --background-50: #f3f1f3;
            --background-100: #e8e3e8;
            --background-200: #d1c7d1;
            --background-300: #b9acb9;
            --background-400: #a290a2;
            --background-500: #8b748b;
            --background-600: #6f5d6f;
            --background-700: #534653;
            --background-800: #382e38;
            --background-900: #1c171c;
            --background-950: #0e0c0e;
            --primary-50: #e8f1fd;
            --primary-100: #d1e3fa;
            --primary-200: #a3c8f5;
            --primary-300: #75acf0;
            --primary-400: #4691ec;
            --primary-500: #1875e7;
            --primary-600: #135eb9;
            --primary-700: #0f468a;
            --primary-750: #0a3161;
            --primary-800: #0a2f5c;
            --primary-900: #05172e;
            --primary-950: #020c17;
            --secondary-50: #f1f2f3;
            --secondary-100: #e3e6e8;
            --secondary-200: #c8ccd0;
            --secondary-300: #acb3b9;
            --secondary-400: #919aa1;
            --secondary-500: #75818a;
            --secondary-600: #5e676e;
            --secondary-700: #464d53;
            --secondary-800: #2f3337;
            --secondary-900: #171a1c;
            --secondary-950: #0c0d0e;
            --accent-50: #fff2e5;
            --accent-100: #ffe6cc;
            --accent-200: #ffcc99;
            --accent-300: #ffb366;
            --accent-400: #ff9933;
            --accent-500: #ff8000;
            --accent-600: #cc6600;
            --accent-700: #994c00;
            --accent-800: #663300;
            --accent-900: #331a00;
            --accent-950: #1a0d00;
        }

        html {
            font-family: 'Open Sauce One', sans-serif;
            background-color: #F6F6F6;
            scroll-behavior: smooth;
        }

        body {
            margin: 0;
            padding: 0;
            line-height: 1.6;
            color: #333;
            width: 100%;
            height: 100%;
        }

        code {
            font-family: RoxboroughCF, Poppins;
        }

        section {
            padding: 4rem 1rem;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 rem;
        }
    </style>
</body>
</html>